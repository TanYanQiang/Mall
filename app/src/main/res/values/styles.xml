<resources>


    <style name="MyTabLayoutTextAppearance">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/tab_text_color</item>
    </style>

    <style name="ActionLine">
        <item name="android:background">@drawable/input_box</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
        <item name="android:textColor">@color/text_color_lv2</item>
        <item name="android:textColorHint">@color/text_color_lv4</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="WithDrawEditText">
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:background">@null</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
        <item name="android:textColor">@color/text_color_lv1</item>
        <item name="android:textColorHint">@color/text_color_lv4</item>
        <item name="android:textSize">@dimen/text_size_lv3</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="ActionLine.EditText" parent="ActionLine">
        <item name="android:textColorHint">@color/text_color_lv4</item>
    </style>


    <style name="ActionLine.EditText.Multi" parent="ActionLine.EditText">
        <item name="android:singleLine">false</item>
        <item name="android:gravity">left|top</item>
        <item name="android:minHeight">200dp</item>
        <item name="android:maxLength">250</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
    </style>


    <style name="Button">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/line_height_lv2</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/text_size_large_18</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
    </style>


    <style name="Button.NormalCorners" parent="Button">
        <item name="android:background">@drawable/btn_lv1_corners</item>
        <item name="android:textColor">@color/text_red_solid</item>
    </style>

    <style name="Button.OrangeCorners" parent="Button">
        <item name="android:background">@drawable/btn_lv2_corners</item>
        <item name="android:textColor">@color/text_red_solid</item>
    </style>

    <style name="Button.RedCorners" parent="Button">
        <item name="android:background">@drawable/btn_lv3_corners</item>
        <item name="android:textColor">@color/text_red_solid</item>
    </style>

    <style name="Button.RedEmptyCorners" parent="Button">
        <item name="android:background">@drawable/btn_red_empty_corners</item>
        <item name="android:textColor">@color/text_red</item>
    </style>

    <style name="Button.WhiteEmpty" parent="Button">
        <item name="android:background">@drawable/btn_white_empty</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ProfileAvatar">
        <item name="android:layout_width">@dimen/avatar_size</item>
        <item name="android:layout_height">@dimen/avatar_size</item>
        <item name="android:src">@mipmap/avatar_default</item>
    </style>

    <style name="ListViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scrollbars">none</item>
        <item name="android:listSelector">@color/transparent</item>
        <item name="android:cacheColorHint">@color/transparent</item>
    </style>

    <style name="ListViewStyle.HasDivider" parent="ListViewStyle">
        <item name="android:divider">@color/line_color</item>
        <item name="android:dividerHeight">0.5dip</item>
    </style>

    <style name="TextStyle">

    </style>


    <style name="TextStyle.Title">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/text_color_lv1</item>
    </style>

    <style name="TextStyle.Title.Large">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/text_color_lv1</item>
    </style>

    <style name="TextStyle.Title.Large.Solid">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextStyle.Title.Medium">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/text_color_lv1</item>
    </style>

    <style name="TextStyle.Title.Medium.Solid">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextStyle.Title.Medium.Gray">
        <item name="android:textColor">@color/text_color_lv3</item>
    </style>

    <style name="TextStyle.Title.Small">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/text_color_lv2</item>
    </style>

    <style name="TextStyle.Title.Small.Solid">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextStyle.Desc">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/text_color_lv2</item>
    </style>
    <style name="TextStyle.Desc.Small">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/text_color_lv2</item>
    </style>
</resources>
