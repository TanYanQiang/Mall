<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:divider="@drawable/divider_horizontal"
        android:gravity="center_vertical"
        android:minHeight="@dimen/line_height_lv1"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_vertical_margin"
        android:showDividers="beginning|end">


        <TextView
            style="@style/TextStyle.Title.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="身份证:" />

        <com.tgh.devkit.view.ClearableEditText
            android:id="@+id/idCard"
            style="@style/ActionLine.EditText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
            android:background="@color/transparent"
            android:lines="1"
            android:paddingLeft="@dimen/activity_vertical_margin"
            tools:text="430223" />

    </LinearLayout>

    <View style="@style/HorizontalLineStyle" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:divider="@drawable/divider_horizontal"
        android:gravity="center_vertical"
        android:minHeight="@dimen/line_height_lv1"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_vertical_margin"
        android:showDividers="beginning|end">

        <TextView
            style="@style/TextStyle.Title.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号:" />

        <com.tgh.devkit.view.ClearableEditText
            android:id="@+id/inputMobile"
            style="@style/ActionLine.EditText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
            android:background="@color/transparent"
            android:hint="请填写手机号码"
            android:inputType="number"
            android:lines="1"
            android:maxLength="11"
            android:paddingLeft="@dimen/activity_vertical_margin" />
    </LinearLayout>

    <View style="@style/HorizontalLineStyle" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:divider="@drawable/divider_horizontal"
        android:gravity="center_vertical"
        android:minHeight="@dimen/line_height_lv1"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_vertical_margin"
        android:showDividers="beginning|end">

        <TextView
            style="@style/TextStyle.Title.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="验证码:" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height_lv1"
            android:divider="@drawable/divider_vertical"
            android:orientation="horizontal">

            <com.tgh.devkit.view.ClearableEditText
                android:id="@+id/inputSmsCode"
                style="@style/ActionLine.EditText"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:hint="验证码"
                android:inputType="number" />

            <TextView
                android:id="@+id/requestSmsCode"
                style="@style/Button.OrangeCorners"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="0dp"
                android:gravity="center"
                android:text="获取验证码"
                android:textSize="@dimen/text_size_lv3" />

        </LinearLayout>

    </LinearLayout>


    <Button
        android:id="@+id/btnNext"
        style="@style/Button.NormalCorners"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="提交" />

</LinearLayout>