<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:divider="@drawable/divider_horizontal"
        android:gravity="center_vertical"
        android:minHeight="@dimen/line_height_lv1"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_vertical_margin"
        android:showDividers="beginning|end">

        <TextView
            style="@style/TextStyle.Title.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="验证码:" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height_lv1"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:divider="@drawable/divider_vertical"

            android:orientation="horizontal">

            <com.tgh.devkit.view.ClearableEditText
                android:id="@+id/inputSmsCode"
                style="@style/ActionLine.EditText"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:hint="验证码"
                android:inputType="number" />

            <TextView
                android:id="@+id/requestSmsCode"
                style="@style/Button.OrangeCorners"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="0dp"
                android:gravity="center"
                android:text="获取验证码"
                android:textSize="@dimen/text_size_lv3" />

        </LinearLayout>
    </LinearLayout>

    <View style="@style/HorizontalLineStyle" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:divider="@drawable/divider_horizontal"
        android:gravity="center_vertical"
        android:minHeight="@dimen/line_height_lv1"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_vertical_margin"
        android:showDividers="beginning|end">

        <TextView
            android:id="@+id/passwordLabel"
            style="@style/TextStyle.Title.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="输入密码:" />

        <com.tgh.devkit.view.ClearableEditText
            android:id="@+id/inputPassword"
            style="@style/ActionLine.EditText"
            android:layout_margin="0dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:hint="6-20位字母、数字组合"
            android:inputType="textPassword"
            android:lines="1"
            android:maxLength="20"
            android:paddingLeft="@dimen/activity_vertical_margin" />
    </LinearLayout>
    <View style="@style/HorizontalLineStyle" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:divider="@drawable/divider_horizontal"
        android:gravity="center_vertical"
        android:minHeight="@dimen/line_height_lv1"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_vertical_margin"
        android:showDividers="beginning|end">

        <TextView
            android:id="@+id/passwordLabel2"
            style="@style/TextStyle.Title.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="验证密码:" />

        <com.tgh.devkit.view.ClearableEditText
            android:id="@+id/inputPassword2"
            style="@style/ActionLine.EditText"
            android:layout_margin="0dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:hint="6-20位字母、数字组合"
            android:inputType="textPassword"
            android:lines="1"
            android:maxLength="20"
            android:paddingLeft="@dimen/activity_vertical_margin"
              />
    </LinearLayout>

</LinearLayout>