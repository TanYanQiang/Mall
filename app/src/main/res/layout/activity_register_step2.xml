<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/mobileTips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingLeft="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_vertical_margin"
        android:text="验证码短信已发送至18600950365"
        android:textColor="@color/text_color_lv2"
        android:textSize="@dimen/text_size_lv3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:background="@color/white"
        android:divider="@drawable/divider_horizontal"
        android:gravity="center_vertical"
        android:minHeight="@dimen/line_height_lv1"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_vertical_margin"
        android:showDividers="beginning|end">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="验证码"
            android:textColor="@color/text_color_lv1"
            android:textSize="@dimen/text_size_lv2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height_lv1"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:divider="@drawable/divider_vertical"
            android:orientation="horizontal"
            android:showDividers="middle">

            <com.tgh.devkit.view.ClearableEditText
                android:id="@+id/inputSmsCode"
                style="@style/ActionLine.EditText"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:hint="验证码"
                android:inputType="number" />

            <TextView
                android:id="@+id/requestSmsCode"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="获取验证码"
                android:textColor="@color/orange"
                android:textSize="@dimen/text_size_lv3" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:background="@color/white"
        android:divider="@drawable/divider_horizontal"
        android:gravity="center_vertical"
        android:minHeight="@dimen/line_height_lv1"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_vertical_margin"
        android:showDividers="beginning|end">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置密码"
            android:textColor="@color/text_color_lv1"
            android:textSize="@dimen/text_size_lv2" />

        <com.tgh.devkit.view.ClearableEditText
            android:id="@+id/inputPassword"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:hint="6-20位字母、数字组合"
            android:inputType="textPassword"
            android:lines="1"
            android:maxLength="20"
            android:paddingLeft="@dimen/activity_vertical_margin"
            android:textColor="@color/text_color_lv1"
            android:textColorHint="@color/text_color_lv3"
            android:textSize="@dimen/text_size_lv2" />
    </LinearLayout>

    <Button
        android:id="@+id/btnRegister"
        style="@style/Button.RedCorners"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="注册" />
</LinearLayout>