<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/activity_vertical_margin"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/orderThumb"
        android:layout_width="@dimen/goods_thumb_width"
        android:layout_height="@dimen/goods_thumb_height"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/ic_launcher" />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_toRightOf="@id/orderThumb"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/goodsName"
            style="@style/TextStyle.Title.Medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:ellipsize="end"
            tools:text="气垫BB霜 保湿遮瑕美白粉底液替换套盒" />

        <TextView
            android:id="@+id/goodsPrice"
            style="@style/TextStyle.Title.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/goodsName"
            android:layout_below="@id/goodsName"
            android:layout_marginTop="@dimen/margin_8"
            tools:text="￥180" />

        <TextView
            android:id="@+id/count"
            style="@style/TextStyle.Title.Large.Gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/goodsName"
            android:layout_alignTop="@id/goodsPrice"
            tools:text="x1" />
    </RelativeLayout>

</RelativeLayout>