<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#272c35"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/avatar"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:divider="@drawable/divider_horizontal"
                android:orientation="vertical"
                android:showDividers="middle">

                <LinearLayout
                    android:id="@+id/nav_message_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start|center_vertical"
                    android:minHeight="@dimen/line_height_lv2"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/activity_vertical_margin"
                    android:paddingRight="@dimen/activity_vertical_margin">

                    <TextView
                        android:id="@+id/nav_message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_menu_manage"
                        android:text=" 消息通知(0)"
                        android:drawablePadding="5dp"
                        android:textColor="@color/text_color_light_lv1"
                        android:textSize="@dimen/text_size_lv2" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/nav_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start|center_vertical"
                    android:minHeight="@dimen/line_height_lv2"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/activity_vertical_margin"
                    android:paddingRight="@dimen/activity_vertical_margin">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_menu_manage"
                        android:text="全部分类"
                        android:drawablePadding="5dp"
                        android:textColor="@color/text_color_light_lv1"
                        android:textSize="@dimen/text_size_lv2" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/nav_integral"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start|center_vertical"
                    android:minHeight="@dimen/line_height_lv2"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/activity_vertical_margin"
                    android:paddingRight="@dimen/activity_vertical_margin">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_menu_manage"
                        android:text="积分商品"
                        android:drawablePadding="5dp"
                        android:textColor="@color/text_color_light_lv1"
                        android:textSize="@dimen/text_size_lv2" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/nav_partner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start|center_vertical"
                    android:minHeight="@dimen/line_height_lv2"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/activity_vertical_margin"
                    android:paddingRight="@dimen/activity_vertical_margin">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_menu_manage"
                        android:text="我的伙伴"
                        android:drawablePadding="5dp"
                        android:textColor="@color/text_color_light_lv1"
                        android:textSize="@dimen/text_size_lv2" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/nav_contact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start|center_vertical"
                    android:minHeight="@dimen/line_height_lv2"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/activity_vertical_margin"
                    android:paddingRight="@dimen/activity_vertical_margin">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_menu_manage"
                        android:text="联系客服"
                        android:drawablePadding="5dp"
                        android:textColor="@color/text_color_light_lv1"
                        android:textSize="@dimen/text_size_lv2" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/nav_setting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start|center_vertical"
                    android:minHeight="@dimen/line_height_lv2"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/activity_vertical_margin"
                    android:paddingRight="@dimen/activity_vertical_margin">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="5dp"
                        android:drawableLeft="@drawable/ic_menu_manage"
                        android:text="设置"
                        android:textColor="@color/text_color_light_lv1"
                        android:textSize="@dimen/text_size_lv2" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</merge>