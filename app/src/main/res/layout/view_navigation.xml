<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#181f27"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/avatar"
                style="@style/ProfileAvatar"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="113dp"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:divider="@mipmap/ic_nav_divider"
                android:orientation="vertical"
                android:paddingLeft="@dimen/activity_vertical_margin"
                android:paddingRight="@dimen/activity_vertical_margin"
                android:showDividers="middle">

                <LinearLayout
                    android:id="@+id/nav_message_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start|center_vertical"
                    android:minHeight="56dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/nav_message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_nav_message"
                        android:drawablePadding="9dp"
                        android:gravity="center_vertical"
                        android:text="消息通知"
                        android:textColor="@color/nav_text_color"
                        android:textSize="@dimen/text_size_large" />

                    <TextView
                        tools:text="99+"
                        android:id="@+id/bubble"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:background="@drawable/bubble_red"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="10sp" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/nav_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start|center_vertical"
                    android:minHeight="56dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_nav_category"
                        android:drawablePadding="9dp"
                        android:gravity="center_vertical"
                        android:text="全部分类"
                        android:textColor="@color/nav_text_color"
                        android:textSize="@dimen/text_size_large" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/nav_integral"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start|center_vertical"
                    android:minHeight="56dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_nav_integral"
                        android:drawablePadding="9dp"
                        android:text="积分商品"
                        android:textColor="@color/nav_text_color"
                        android:textSize="@dimen/text_size_large" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/nav_partner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start|center_vertical"
                    android:minHeight="56dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_nav_team"
                        android:drawablePadding="9dp"
                        android:gravity="center_vertical"
                        android:text="我的伙伴"
                        android:textColor="@color/nav_text_color"
                        android:textSize="@dimen/text_size_large" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/nav_contact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start|center_vertical"
                    android:minHeight="56dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_nav_contact"
                        android:drawablePadding="9dp"
                        android:gravity="center_vertical"
                        android:text="联系客服"
                        android:textColor="@color/nav_text_color"
                        android:textSize="@dimen/text_size_large" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/nav_setting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start|center_vertical"
                    android:minHeight="56dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_nav_setting"
                        android:drawablePadding="9dp"
                        android:gravity="center_vertical"
                        android:text="设置"
                        android:textColor="@color/nav_text_color"
                        android:textSize="@dimen/text_size_large" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</merge>